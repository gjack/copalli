<div class="container d-flex flex-column">
  <div class="mt-2 align-self-end">
    <%= link_to "Add New Member", new_team_team_member_path(@team), class: "btn btn-primary" %>
  </div>
  <div class="card mt-5">
    <div class="card-header d-flex justify-content-between align-items-center">
      <span><%= @team.name %></span>
      <% if @team.manager.present? %>
        <span class="badge badge-secondary">
          manager: <%= @team.manager.name %>
        </span>
      <% else %>
        <span class="badge badge-secondary">
          manager: not assigned
        </span>
      <% end %>
    </div>
    <div class="card-body">
      <% if @team.team_members.any? %>
        <div class="list-group">
          <% @team.team_members.each do |member| %>
            <a href=<%= team_team_member_path(@team, member) %> class="list-group-item list-group-item-action"><%= member.name %></a>
          <% end %>
        </div>
      <% else %>
        <div>
          You have no members on your team yet
        </div>
      <% end %>
    </div>
  </div>
</div>
