<div class="container">
  <% if @teams.blank? %>
    <div class="jumbotron jumbotron-fluid p-3">
      <div class="container d-flex flex-column justify-content-center align-items-center">
        <%= image_tag "blank_state1.png", size: "300x300"%>
        <p class="lead">It seems your organization doesn't have any teams yet.</p>
        <%= link_to "Create Team", new_team_path, { :remote => true, 'data-toggle' => "modal", 'data-target' => '#modal-window', class: "btn btn-primary" } %>
      </div>
    </div>
  <% else %>
    <div class="container p-3" %>
      <ul class="list-group">
        <% @teams.each do |team| %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <span>
              <%= link_to team.name, team_path(team) %>
            </span>
            <span></span>
          </li>
        <% end %>
      </ul>
      <div class="pt-4">
        <%= link_to "Create Team", new_team_path, { :remote => true, 'data-toggle' => "modal", 'data-target' => '#modal-window', class: "btn btn-primary" } %>
      </div>
    </div>
  <% end %>
</div>
<div id="modal-window" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"></div>
